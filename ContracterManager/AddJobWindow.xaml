<Window x:Class="ContracterManager.AddJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContracterManager"
        mc:Ignorable="d"
        Title="AddJobWindow" Height="250" Width="450" MaxHeight="250" MaxWidth="450">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Title:"/>
                <TextBox x:Name="textbox_title" Width="150" Margin="0,0,5,0"/>
                <Label Content="Cost:"/>
                <TextBox x:Name="textbox_cost" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="button_confirm" Content="Confirm" Width="130" Height="30" Click="button_confirm_Click"/>
                <Button x:Name="button_cancel" Content="Cancel" Width="130" Height="30" Margin="10,0,0,0" Click="button_cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
